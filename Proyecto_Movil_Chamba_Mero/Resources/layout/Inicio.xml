<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="¿Que acción desea realizar?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginTop="18.9dp"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:textAlignment="center" />

    <Button
        android:text="Modificar producto"
        android:layout_width="315.3dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnmodi"
        android:layout_marginLeft="54.2dp"
        android:layout_marginTop="35.3dp" />
    <Button
        android:text="Eliminar producto"
        android:layout_width="315.3dp"
        android:layout_height="wrap_content"
        android:id="@+id/btneli"
        android:layout_marginLeft="54.2dp"
        android:layout_marginTop="35.3dp" />
     <Button
        android:text="Ingresar producto"
        android:layout_width="315.3dp"
        android:layout_height="wrap_content"
        android:id="@+id/btningresarya"
        android:layout_marginLeft="54.2dp"
        android:layout_marginTop="35.3dp" />

</LinearLayout>