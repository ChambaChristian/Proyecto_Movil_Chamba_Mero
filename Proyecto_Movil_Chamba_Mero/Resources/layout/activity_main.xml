<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_centerVertical="true"
        android:background="@mipmap/cel">
        <TextView
            android:text="BIENVENIDO AL SISTEMA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginTop="63.0dp"
            android:textColor="@android:color/background_light"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textSize="20dp" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="141.0dp"
            android:id="@+id/linearLayout4"
            android:layout_marginTop="10.0dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="344.5dp"
                android:layout_height="98.0dp"
                android:id="@+id/textView4"
                android:textColor="@android:color/background_light"
                android:background="@drawable/loginlogo"
                android:layout_marginLeft="16.5dp"
                android:layout_marginTop="28.0dp"
                android:layout_marginRight="19.0dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="54.5dp"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="65.0dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="65.0dp"
                android:layout_height="61.0dp"
                android:id="@+id/textView2"
                android:background="@drawable/user"
                android:layout_marginLeft="30.0dp" />
            <EditText
                android:inputType="textMultiLine"
                android:layout_width="221.5dp"
                android:layout_height="wrap_content"
                android:id="@+id/usu"
                android:layout_marginLeft="37.0dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginRight="30.0dp"
                android:hint="Ingrese su usuario"
                android:textColorHint="@android:color/darker_gray"
                android:drawableBottom="@android:color/background_dark" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="54.5dp"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="16.5dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="110.5dp"
                android:id="@+id/textView3"
                android:background="@drawable/pass"
                android:foregroundGravity="center"
                android:layout_gravity="center" />
            <EditText
                android:inputType="textPassword"
                android:layout_width="228.5dp"
                android:layout_height="match_parent"
                android:id="@+id/pass"
                android:layout_marginLeft="16.5dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginRight="17.5dp"
                android:hint="Ingrese su contraseña" />
        </LinearLayout>
        <Button
            android:text="INGRESAR"
            android:layout_width="166.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ing"
            android:layout_marginTop="27.0dp"
            android:foregroundGravity="center"
            android:layout_marginLeft="103.5dp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/holo_blue_dark"
            android:background="@drawable/btn" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="51.0dp"
            android:id="@+id/linearLayout5"
            android:layout_marginTop="12.0dp">
            <TextView
                android:text="¿Aún no tienes una cuenta?"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginLeft="19.5dp"
                android:layout_marginTop="27.5dp" />
            <TextView
                android:text="Registrarse"
                android:layout_width="112.0dp"
                android:layout_height="match_parent"
                android:id="@+id/txt_regis"
                android:textColor="@android:color/holo_blue_light"
                android:textStyle="bold|italic"
                android:textSize="17dp"
                android:layout_marginTop="26.4dp"
                android:layout_marginLeft="8.8dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6" />

    </LinearLayout>

</RelativeLayout>